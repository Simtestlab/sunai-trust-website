rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public to submit volunteer forms
    match /volunteers/{document} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Allow public to submit NGO registrations
    match /ngo_registrations/{document} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Default: only authenticated users can access other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
